{
    "extends": ["next", "next/core-web-vitals"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-unused-vars": "warn",
        "no-console": "warn",
        "prefer-const": "error",
        "comma-dangle": ["error", "always-multiline"],
        "@next/next/no-img-element": "off"
    }
}
